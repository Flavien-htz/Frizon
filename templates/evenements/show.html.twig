{% block title %}Evenement
{% endblock %}

{% block body %}

	<div class="container">

		<table class="table">
			<tbody>
				<tr>
					<th>Nom</th>
					<td>{{ evenement.nom }}</td>
				</tr>
				<tr>
					<th>Lieu</th>
					<td>{{ evenement.lieu }}</td>
				</tr>
