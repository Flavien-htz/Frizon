{% extends 'base.html.twig' %}

{% block title %}Annonces
{% endblock %}

{% block body %}
	<h1>Annonces</h1>


	<article class="container">
		<section class="row">
			<article class="col-12">
				<table class="table">
					<tbody>
						<tr>
							<th>Titre</th>
							<td>{{ annonce.type }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ annonce.description }}</td>
						</tr>
						<tr>
							<th>Personne</th>
							<td>{{ annonce.nomPersonne }}</td>
						</tr>
						<tr>
							<th>Date de création</th>
							<td>{{ annonce.createdAt ? annonce.createdAt|date('Y-m-d') }}</td>
						</tr>
						<tr>
							{% if annonce.prix is not null %}
								<th>Éventuel prix</th>
								<td>{{ annonce.prix }}</td>
							{% endif %}
						</tr>
						<tr>
							<th>Téléphone</th>
							<td>{{ annonce.telephone }}</td>
						</tr>
					</tbody>
				</table>
				<div class="row-flex">
					{% for picture in annonce.pictures %}
						<div class="col">
							<img src="{{ vich_uploader_asset(picture, 'imageFile') }}" alt="">
						</div>
					{% endfor %}
				</div>

				<div>
					<a class="btn btn-secondary mb-3" href="{{ path('annonces_index') }}">Retour</a>
				</div>


				<a class="btn btn-primary" href="{{ path('annonces_edit', {'id': annonce.id}) }}">Modifier</a>

				{{ include('annonces/_delete_form.html.twig') }}

			</article>
		</section>
	</article>

{% endblock %}
