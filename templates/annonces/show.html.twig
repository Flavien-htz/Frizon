{% extends 'base.html.twig' %}

{% block title %}Annonces
{% endblock %}

{% block body %}
	<h1>Annonces</h1>


	<article class="container">
		<section class="row">
			<article class="col-12">
				<table class="table">
					<tbody>
						<tr>
							<th>Titre</th>
							<td>{{ annonce.type }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ annonce.description }}</td>
						</tr>
						<tr>
							<th>Personne</th>
							<td>{{ annonce.nomPersonne }}</td>
						</tr>
						<tr>
							<th>Date de création</th>
							<td>{{ annonce.createdAt ? annonce.createdAt|date('Y-m-d') }}</td>
						</tr>
						<tr>
							{% if annonce.prix is not null %}
								<th>Éventuel prix</th>
								<td>{{ annonce.prix }}</td>
							{% endif %}
						</tr>
						<tr>
							<th>Téléphone</th>
							<td>{{ annonce.telephone }}</td>
						</tr>
					</tbody>
				</table>

				<section class="col-4 mt-5">

					<div class="row-flex mb-2">
						{% if annonce.picture %}
							<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="3500">
								<div class="carousel-inner">
									{% for picture in annonce.pictures %}
										<div class="carousel-item {% if loop.first %} active {% endif %} ">
											<img class=" d-block w-100" src="{{ picture.filename }}">
										</div>
									{% endfor %}
								</div>
							</div>
						{% endif %}
						<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</section>


				<div>
					<a class="btn btn-secondary mb-3" href="{{ path('annonces_index') }}">Retour</a>
				</div>


				<a class="btn btn-primary" href="{{ path('annonces_edit', {'id': annonce.id}) }}">Modifier</a>

				{{ include('annonces/_delete_form.html.twig') }}

			</article>
		</section>
	</article>

{% endblock %}
